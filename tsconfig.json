{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es2017", // 编译的目标语言版本 支持 async/await
    "noImplicitAny": false, // 禁止隐式返回 any
    "types": ["node"],
    "moduleResolution": "node", // 编译的环境
    "sourceMap": false, // 是否生成 .map 文件
    "outDir": "./dist", // 编译的目录
    "esModuleInterop": false,
    "typeRoots": [
      "index.d.ts",
    ]
  },
  "include": [
    "./src/**/*",
  ]
}
